<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cvt="clr-namespace:Group5F25.APP.Resources.Converters"
             x:Class="Group5F25.APP.Pages.RegisterPage"
             Title="Create account">
    <ScrollView>
        <VerticalStackLayout Padding="20,12" Spacing="12">
            <Label Text="Create account" FontSize="22" HorizontalTextAlignment="Center" Margin="0,6,0,16"/>

            <Label Text="Name" FontSize="12"/>
            <Entry Text="{Binding Name}" Placeholder="Your name" />

            <Label Text="Email" FontSize="12"/>
            <Entry Text="{Binding Email}" Keyboard="Email" Placeholder="you@example.com" />
            <Label Text="Invalid email" TextColor="Red" FontSize="12"
             IsVisible="{Binding EmailValid, Converter={StaticResource InverseBoolConverter}}"/>

            <Label Text="Password" FontSize="12"/>
            <Entry Text="{Binding Password}" IsPassword="True" Placeholder="••••••••" />

            <Label Text="Confirm password" FontSize="12"/>
            <Entry Text="{Binding Confirm}" IsPassword="True" Placeholder="••••••••" />
            <Label Text="Passwords do not match" TextColor="Red" FontSize="12"
             IsVisible="{Binding PasswordsMatch, Converter={StaticResource InverseBoolConverter}}"/>

            <Button Text="Register" Command="{Binding RegisterCommand}" />
            <Label Text="{Binding Status}" TextColor="Red" FontSize="12"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
