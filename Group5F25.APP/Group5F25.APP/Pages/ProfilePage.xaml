<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Group5F25.APP.PageModels"
             x:Class="Group5F25.APP.Pages.ProfilePage"
             x:DataType="vm:ProfilePageViewModel"
             Title="Profile"
             BackgroundColor="#F2F2F2">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Avatar -->
            <Grid ColumnDefinitions="*, Auto">
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="Profile"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#512BD4" />
                    <Label Text="{Binding FullName}"
                           FontSize="16"
                           TextColor="#444" />
                </VerticalStackLayout>

                <Border Grid.Column="1"
                        StrokeShape="Ellipse"
                        HeightRequest="64"
                        WidthRequest="64"
                        BackgroundColor="#512BD4"
                        StrokeThickness="0">
                    <Label Text="{Binding Initials}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="White" />
                </Border>
            </Grid>

            <!-- Info card -->
            <Border StrokeShape="RoundRectangle 16"
                    BackgroundColor="White"
                    Padding="16"
                    StrokeThickness="0">
                <VerticalStackLayout Spacing="8">

                    <Label Text="Full Name"
                           FontAttributes="Bold"
                           FontSize="14"
                           TextColor="#666" />
                    <Label Text="{Binding FullName}"
                           FontSize="16"
                           TextColor="#222" />

                    <BoxView HeightRequest="1"
                             BackgroundColor="#E0E0E0"
                             Margin="0,10" />

                    <Label Text="Email / Username"
                           FontAttributes="Bold"
                           FontSize="14"
                           TextColor="#666" />
                    <Label Text="{Binding Email}"
                           FontSize="16"
                           TextColor="#222" />

                    <BoxView HeightRequest="1"
                             BackgroundColor="#E0E0E0"
                             Margin="0,10" />

                    <Label Text="Role"
                           FontAttributes="Bold"
                           FontSize="14"
                           TextColor="#666" />
                    <Label Text="{Binding Role}"
                           FontSize="16"
                           TextColor="#222" />
                </VerticalStackLayout>
            </Border>

            <!-- Actions -->
            <Button Text="Edit Profile"
                    Command="{Binding EditProfileCommand}"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50" />

            <Button Text="Change Password"
                    Command="{Binding ChangePasswordCommand}"
                    BackgroundColor="White"
                    TextColor="#512BD4"
                    BorderColor="#512BD4"
                    BorderWidth="1"
                    CornerRadius="10"
                    HeightRequest="50" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
