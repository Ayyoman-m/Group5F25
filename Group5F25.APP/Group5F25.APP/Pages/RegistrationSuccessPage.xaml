<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Group5F25.APP.Pages.RegistrationSuccessPage"
             Title="Registration Successful">

    <VerticalStackLayout
        Padding="20"
        Spacing="20"
        VerticalOptions="Center">

        <Label Text="Registration Successful"
               FontSize="24"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />

        <Label Text="Your account has been created. You can now log in with your new credentials."
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />

        <Button Text="Return to Login"
                HorizontalOptions="Center"
                Command="{Binding ReturnToLoginCommand}" />

    </VerticalStackLayout>
</ContentPage>
