<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Group5F25.APP.PageModels"
             xmlns:models="clr-namespace:Group5F25.APP.Models"
             x:Class="Group5F25.APP.Pages.TripHistoryPage"
             x:DataType="vm:TripHistoryViewModel"
             Title="Trip History">

    <Grid RowDefinitions="Auto,*" Padding="16">

        <!-- Header / Refresh -->
        <HorizontalStackLayout Grid.Row="0" Spacing="10">
            <Label Text="Trip History"
                   FontSize="22"
                   FontAttributes="Bold"
                   VerticalOptions="Center" />
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               VerticalOptions="Center" />
            <Button Text="Refresh"
                    Command="{Binding RefreshCommand}"
                    HorizontalOptions="EndAndExpand" />
        </HorizontalStackLayout>

        <!-- Trip list -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Trips}"
                        Margin="0,10,0,0">
            <CollectionView.EmptyView>
                <Label Text="No trips found."
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:TripSummary">
                    <Frame Padding="12" Margin="0,4" HasShadow="False" BorderColor="#DDDDDD">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding StartTime, StringFormat='Start: {0:g}'}" />
                            <Label Text="{Binding EndTime, StringFormat='End: {0:g}'}" />
                            <Label Text="{Binding Duration, StringFormat='Duration: {0:g}'}" />
                            <Label Text="{Binding Score, StringFormat='Score: {0:F1}'}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
