<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Group5F25.APP.PageModels"
             x:Class="Group5F25.APP.Pages.LoginPage"
             Title="Driver Analytics"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

            <Label Text="Welcome Back" 
                   FontSize="32" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   TextColor="#333"/>

            <Label Text="Sign in to continue" 
                   FontSize="16" 
                   HorizontalOptions="Center" 
                   TextColor="Gray"
                   Margin="0,0,0,20"/>

            <Entry Placeholder="Email Address" 
                   Text="{Binding Email}" 
                   Keyboard="Email"
                   BackgroundColor="White"
                   HeightRequest="50"/>

            <Entry Placeholder="Password" 
                   Text="{Binding Password}" 
                   IsPassword="True"
                   BackgroundColor="White"
                   HeightRequest="50"/>

            <ActivityIndicator IsRunning="{Binding IsLoading}" 
                               IsVisible="{Binding IsLoading}"
                               Color="#007bff"
                               HeightRequest="50"/>

            <Button Text="Login" 
                    Command="{Binding LoginCommand}" 
                    IsVisible="{Binding IsNotLoading}"
                    BackgroundColor="#007bff" 
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    FontAttributes="Bold"/>

            <Label Text="Don't have an account? Register" 
                   TextColor="#007bff"
                   HorizontalOptions="Center"
                   TextDecorations="Underline"
                   Margin="0,20,0,0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToRegisterCommand}" />
                </Label.GestureRecognizers>
            </Label>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>